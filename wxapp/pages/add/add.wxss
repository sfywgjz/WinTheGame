/* pages/add/add.wxss */
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
    padding-bottom: 15px;
}
.mini-btn{
    margin-right: 5px;
}


/*mask*/  
.toast_mask {  
  opacity: 0;  
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
}


/*mask*/  
.toast_success_mask {  
  opacity: 0.5;  
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;
  background: rgba(0, 0,0, 1);
}

.toast_success_close{
  display: flex;  
  width: 100%;  
  height: 180%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}

.btn::after{
  border: none;
}

/*toast*/  
.toast_success_content_box {  
  display: flex;  
